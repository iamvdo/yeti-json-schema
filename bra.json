{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Yeti - BRA",
  "description": "",
  "type": "object",
  "required": ["zones"],
  "properties": {
    "zones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["zone", "validUntil", "danger", "orientations"],
        "properties": {
          "zone": {
            "type": "string"
          },
          "validUntil": {
            "type": "string",
            "format": "date-time"
          },
          "danger": {
            "type": "object",
            "required": ["low", "max"],
            "dependentRequired": {
              "high": ["altitude"],
              "highEvol": ["high"],
              "altitude": ["high"],
              "locLow": ["locHigh", "high"],
              "locHigh": ["locLow", "high"]
            },
            "properties": {
              "low": {
                "oneOf": [{
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 5
                }, {
                  "type": "null"
                }]
              },
              "lowEvol": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5
              },
              "locLow": {
                "enum": ["E", "W", "N", "S"]
              },
              "high": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5
              },
              "highEvol": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5
              },
              "locHigh": {
                "enum": ["E", "W", "N", "S"]
              },
              "altitude": {
                "type": "string",
              },
              "max": {
                "oneOf": [{
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 5
                }, {
                  "type": "null"
                }]
              },
              "comment": {
                "type": "string"
              }
            }
          },
          "orientations": {
            "type": "object",
            "required": ["ne", "e", "se", "s", "sw", "w", "nw", "n"],
            "properties": {
              "ne": {
                "type": "boolean"
              },
              "e": {
                "type": "boolean"
              },
              "se": {
                "type": "boolean"
              },
              "s": {
                "type": "boolean"
              },
              "sw": {
                "type": "boolean"
              },
              "w": {
                "type": "boolean"
              },
              "nw": {
                "type": "boolean"
              },
              "n": {
                "type": "boolean"
              },
              "comment": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}